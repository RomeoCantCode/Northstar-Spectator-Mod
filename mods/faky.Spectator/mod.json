{
	"Name" : "faky.Spectator",
	"Description" : "Allows everyone to sp",
	"Version": "0.1.0",
	"LoadPriority": 2,

	"Scripts": [
		{
			"Path": "spectator.nut",
			"RunOn": "SERVER && MP",
			"ServerCallback": {
				"After": "CustomSpectator_Init"
			}
		}
	],

	"ConVars": [
		{
			"Name": "spectator_chatinfo",
			"DefaultValue": "false"
		},
		{
			"Name": "spectator_chatinfo_interval",
			"DefaultValue": "300"
		},
		{
			"Name": "spectator_chatinfo_message",
			"DefaultValue": "To spectate someone type spec NICKNAME or spec PARTOFNAME in the console."
		},
		{
			"Name": "spectator_selfspec_allow",
			"DefaultValue": "false"
		}
	]
}